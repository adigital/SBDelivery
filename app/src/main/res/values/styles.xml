<resources>

    <style name="TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_view_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextViewValidate">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_view_validate_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">13dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#1A1A21</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonSecondary">
        <item name="android:background">@drawable/bg_transparent_with_border_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonThree">
        <item name="android:background">@drawable/bg_three_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonFour">
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TabLayoutStyle" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="menu_item_color">
        <item name="android:textColor">@color/dish_item_text</item>
    </style>

    <!--Dialog-->
    <style name="DialogButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/color_accent</item>
    </style>
</resources>